table 'Time Intelligence'

	calculationGroup
		precedence: 10

		calculationItem CY = SELECTEDMEASURE ()

		calculationItem QTD =
				CALCULATE (
				    SELECTEDMEASURE (),
				    DATESQTD ( 'Date'[Date] )
				)

		calculationItem YTD =
				CALCULATE (
				    SELECTEDMEASURE (),
				    DATESYTD ( 'Date'[Date] )
				)

		calculationItem SPLY =
				CALCULATE (
				    SELECTEDMEASURE (),
				    SAMEPERIODLASTYEAR ( 'Date'[Date] )
				)

	column Ordinal
		dataType: Int64
		isHidden
		summarizeBy: Sum
		sourceColumn: Ordinal

		annotation SummarizationSetBy = Automatic

	column 'Time Calc'
		dataType: String
		summarizeBy: None
		sourceColumn: Name
		sortByColumn: Ordinal

		annotation SummarizationSetBy = Automatic

	partition Partition = CalculationGroup
		mode: Import

