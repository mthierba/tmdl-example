table 'Time Intelligence'

	calculationGroup
		precedence: 10

		calculationItem CY = SELECTEDMEASURE ()

		calculationItem QTD =
				CALCULATE (
				    SELECTEDMEASURE (),
				    DATESQTD ( 'Date'[Date] )
				)

		calculationItem YTD =
				CALCULATE (
				    SELECTEDMEASURE (),
				    DATESYTD ( 'Date'[Date] )
				)

		calculationItem SPLY =
				CALCULATE (
				    SELECTEDMEASURE (),
				    SAMEPERIODLASTYEAR ( 'Date'[Date] )
				)

	column Ordinal
		dataType: int64
		isHidden
		summarizeBy: sum
		sourceColumn: Ordinal

		annotation SummarizationSetBy = Automatic

	column 'Time Calc'
		dataType: string
		summarizeBy: none
		sourceColumn: Name
		sortByColumn: Ordinal

		annotation SummarizationSetBy = Automatic

